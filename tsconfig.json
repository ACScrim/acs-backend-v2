{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@models/*": ["./src/models/*"],
      "@utils/*": ["./src/utils/*"],
      "@services/*": ["./src/services/*"],
      "@app-types/*": ["./src/types/*"],
    }
  },
  "include": ["src/**/*.ts", "migrations/**/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
